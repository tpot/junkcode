<% @extra_config.each do |host| -%>
Host <%= host["host"] %>
<% (host.keys - ["host", "id"]).each do |key| %>
	<%= key %> <%= if host[key].kind_of?(Array): host[key].join(', ') else host[key] end %>

<% end %>
<% end %>
Host *
	ControlMaster auto
	ControlPersist yes
	ControlPath ~/.ssh/control/%h.%p.%r
        HashKnownHosts no
        ForwardAgent no
	ForwardX11 no
	GSSAPIAuthentication no
